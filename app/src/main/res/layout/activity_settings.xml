<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.settings.SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSettings1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_2_side"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/back_to_main_from_add_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="#26000000"
            android:drawableStart="@drawable/icon_back"
            android:elevation="2dp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.003"
            android:text="@string/settings"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutSettings1">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/navy"
            android:contentDescription="@string/content_button_about_app"
            android:src="@drawable/about_app_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_app_title"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/fab_about_app"
            app:layout_constraintStart_toStartOf="@id/fab_about_app"
            app:layout_constraintTop_toBottomOf="@+id/fab_about_app" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_about_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/navy"
            android:contentDescription="@string/content_button_about_developer"
            android:src="@drawable/about_user_24"
            app:layout_constraintEnd_toStartOf="@+id/fab_language"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toEndOf="@id/fab_about_app"
            app:layout_constraintTop_toTopOf="@id/fab_about_app"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_about_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_dev_title"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/fab_about_dev"
            app:layout_constraintStart_toStartOf="@id/fab_about_dev"
            app:layout_constraintTop_toBottomOf="@+id/fab_about_dev" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/navy"
            android:contentDescription="@string/content_button_language"
            android:src="@drawable/language_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fab_about_app"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/language"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/fab_language"
            app:layout_constraintStart_toStartOf="@id/fab_language"
            app:layout_constraintTop_toBottomOf="@+id/fab_language" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/navy"
            android:contentDescription="@string/content_button_mode"
            android:src="@drawable/night_mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_about_app"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/night_mode"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/fab_mode"
            app:layout_constraintStart_toStartOf="@id/fab_mode"
            app:layout_constraintTop_toBottomOf="@+id/fab_mode" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="130dp"
            android:backgroundTint="@color/navy"
            android:contentDescription="@string/content_button_logout"
            android:src="@drawable/icon_logout_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toEndOf="@+id/fab_mode"
            app:layout_constraintTop_toBottomOf="@id/tv_about_app"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/logout"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/action_logout"
            app:layout_constraintStart_toStartOf="@id/action_logout"
            app:layout_constraintTop_toBottomOf="@id/action_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>